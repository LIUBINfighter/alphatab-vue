{
  "name": "alphatab-vue",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && cross-env VITE_TARGET_ENV=web vite build",
    "build:web": "vue-tsc -b && cross-env VITE_TARGET_ENV=web vite build",
    "build:gh-pages": "vue-tsc -b && cross-env VITE_TARGET_ENV=web cross-env REPO_NAME=alphatab-vue vite build",
    "preview": "vite preview",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "build:electron-vite": "vue-tsc -b && cross-env VITE_TARGET_ENV=electron vite build",
    "electron:serve": "electron .",
    "electron:dev": "bun run build:electron-vite && bun run electron:serve",
    "dev:electron-hmr": "concurrently \"bun run dev\" \"cross-env ELECTRON_START_URL=http://localhost:5173 bun run electron:serve\"",
    "electron:package": "bun run build:electron-vite && electron-builder"
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@coderline/alphatab": "^1.5.0",
    "codemirror": "^6.0.1",
    "lucide": "^0.509.0",
    "lucide-vue-next": "^0.509.0",
    "marked": "^15.0.12",
    "pinia": "^3.0.2",
    "vue": "^3.5.13",
    "vue-router": "^4.0.13"
  },
  "devDependencies": {
    "@types/marked": "^5.0.2",
    "@types/node": "^22.15.21",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/tsconfig": "^0.7.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vitepress": "^1.6.3",
    "vue-tsc": "^2.2.8",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.alphatabvue.playground",
    "productName": "AlphaTab Vue Playground",
    "copyright": "Copyright Â© 2025 Your Name",
    "directories": {
      "output": "release",
      "app": ".",
      "buildResources": "build-assets/electron"
    },
    "files": [
      "dist/**/*",
      "electron/main.cjs",
      "electron/preload.cjs",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build-assets/electron/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build-assets/electron/icon.icns",
      "category": "public.app-category.music"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build-assets/electron/icon.png",
      "category": "AudioVideo;Audio;Music;"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
